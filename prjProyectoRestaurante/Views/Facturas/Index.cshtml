@model IEnumerable<prjProyectoRestaurante.Models.Factura>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaFactura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoDeFactura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observacion)
            </th>
