        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFactura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoDeFactura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacion)
            </td>
